<%- include("partials/head") -%>
<body>
    <div class="signInContainer">
        <img src="./images/pad.jpg" alt="">
        <div class="signForm">
          
            <form action="/signin" method="post">
                <div style="padding-top:4em;">
                    <h1>¡Bienvenido<span><%=username %></span>!</h1>
                    <h2>Inicia sesión para disfrutar de los beneficios de MOWARDIN.</h2>
                    <%   if (msj_login){%>
                        <p>Usuario y/o contraseñas incorrectas</p>
                        <%  } %>
                </div>
                <input type="text" name="username"  placeholder="Nombre de usuario">
                <div class="name error"></div>
                <input type="password" name="password" placeholder="Contraseña">
                <div class="password error"></div>
                <button class="sign-btn" style="text-decoration:none;cursor:pointer;" type="submit">Iniciar sesión</button>
            </form>
            <p>¿No tienes una cuenta? <a href="signup" class="orange-href" style="text-decoration:none;font-weight:600;">Crea una nueva</a></p>
        </div>
    </div>

</body>
</html>