<div class="others" style="margin-top: 2em;">
    <div class="row">
        <%      productosrender.docs.forEach(function(elemento){     %>
        <div class=" col-md-3 my-4 contendorproductos">
                    <div class="position-relative" style="background-color: aliceblue;">
                        <a href="/product?id=<%= elemento.id %>&&coleccion=<%= elemento.coleccion %>"><img src="<%= elemento.imagen  %>" alt=""></a>
                        <% const texto = elemento.precio;  %>
                        <% const regex = /(\d+)\s*(?=%)/g;  %>
                        <% const descuento = texto.match(regex); %>

                        <%  if (descuento) {  %>

                        <p class="discount2-pageofertas"><%= descuento[0]  %>% desc.</p>
                        <% } else { } %>


                    </div>
                    <p class="other-title nombreproducto"><%= elemento.nombre  %></p>
                    <p class="precioproducto"><%= elemento.precio.replace(elemento.nombre,'')  %></p>
                <div class="d-flex align-items-center justify-content-center">
                    <div class="product-counter other-product-counter">
                        <button class="counter-button other-counter-button minusButton">-</button>
                        <p class="counterNumber" >2</p>
                        <button   class="counter-button other-counter-button plusButton">+</button>
                    </div>
                    <p><b>Añadir cantidad</b></p>
                </div>
                <button id="<%= elemento.id %>" class="add-to-cart-btn other-add-to-cart-btn añadir">Añadir al carrito</button>
        </div>
        <% }) %>
    </div>
</div>
<nav aria-label="...">
    <ul class="pagination pagination-sm justify-content-center">
      <li class="page-item active" aria-current="page">
        <a class="page-link" href="/ofertas?page=1&&a=1">1</a>
      </li>
      <% for ( var i = productosrender.page; i < productosrender.totalPages; i++) { %>
        <%  if(i<=a && i != 1){%>
        <li class="page-item"><a class="page-link" href="/ofertas?page=<%=i%>&&llave=true&&a=<%=i%>"><%= i %></a></li>
        <% } else if(i>a && i <  productosrender.totalPages){ %>
            <span>.</span>
            <% } %>
        <% } %>
        <li class="page-item"><a class="page-link" href="#"><%=   productosrender.totalPages %></a></li>

    </ul>
</nav>

